{
    "name": "gitalk",
    "version": "0.0.1",
    "manifest_version": 2,
    "browser_action": {
        "default_title": "Git Talk",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "permissions": [
        "storage"
    ],
    "background": {
        "scripts": ["js/github.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": ["http://github.com/*", "https://github.com/*"],
        "js": ["js/firebase.min.js", "js/jquery-1.10.2.min.js", "js/underscore-min.js", "js/base64.js", "js/github.js", "content.js", "js/angular.min.js", "js/angularfire.min.js", "chat.js"],
        "css": ["styling.css"]
    }],
    "web_accessible_resources": ["chat.js", "js/firebase.min.js", "js/angular.min.js", "js/angularfire.min.js", "index.html", "chat-bubble.png" ]
}