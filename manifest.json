{
    "name": "gitalk",
    "version": "0.0.1",
    "manifest_version": 1,
    "browser_action": {
        "default_title": "Git Talk",
        "default_popup": "popup.html"
    },
    "background": {
    	"scripts": ["background.js"],
    	"persistent": false
	},
	"content_scripts": [
    	{
        	"matches": ["http://github.com/*", "https://github.com/*"],
        	"js": ["content.js"]
    	}
	]
}